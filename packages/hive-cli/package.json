{
  "name": "hive-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": " copyfiles -u 1 **/*.hbs dist && tsc -d",
    "build:watch": "nodemon",
    "dev": "ts-node src/cli.ts",
    "style-and-lint-fix": "eslint --fix -c .eslintrc.js 'src/**/*.ts*' && prettier 'src/**/*.ts' --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tsoa/cli": "^6.2.0",
    "@tsoa/runtime": "^6.2.0",
    "chokidar": "^3.6.0",
    "compiler-kit": "file:../compiler-kit",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "hive-runtime": "file:../hive-runtime",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.11.28",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  },
  "bin": {
    "hive": "dist/cli.js"
  },
  "nodemonConfig": {
    "ignore": [
      "src/tsoa"
    ],
    "verbose": true,
    "watch": [
      "src"
    ],
    "exec": "npm run build",
    "ext": "ts,hbs",
    "delay": 500
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|src.*?\\.(uspec|ispec))\\.(ts)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      [
        "text",
        {
          "skipFull": true
        }
      ],
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.*spec.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 35,
        "lines": 35,
        "statements": 35
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
