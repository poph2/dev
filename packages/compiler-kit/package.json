{
  "name": "compiler-kit",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build:watch": "npm run clean && tsc -w --declaration",
    "fix": "eslint --fix -c .eslintrc.js 'src/**/*' && prettier 'src/**/*.ts' --write",
    "check": "eslint -c .eslintrc.js 'src/**/*' && prettier 'src/**/*.ts'  --list-different",
    "unit-test": "jest uspec --maxWorkers=2 --passWithNoTests",
    "update": "npm update"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.17.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.4"
  },
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "automock": false,
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(\\.(ispec|uspec))\\.(ts)$",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
